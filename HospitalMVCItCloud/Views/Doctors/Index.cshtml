@model IEnumerable<HospitalMVCItCloud.Models.Classes.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Doctor</h2>
@using (Html.BeginForm("Index", "Doctors", "Index"))
{
    <div class="form-group">
        <input class="form-control" type="text" name="searchname" placeholder="Search" label="Search">
        <input type="submit" value="Search" />
    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecializationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patients)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Specialization.Name)
        </td>
        <td>
            @Html.ListBox("Id", new SelectList(item.Patients, "Id", "Name"))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}